<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherAPIApp"
             xmlns:converters="clr-namespace:WeatherAPIApp.Converters"
             x:Class="WeatherAPIApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>



            <converters:TimeFormatterConverter x:Key="TimeFormatterConverter" />
            <converters:KmHToMsConverter x:Key="KmHToMsConverter" />
         


        </ResourceDictionary>
    </Application.Resources>
</Application>
